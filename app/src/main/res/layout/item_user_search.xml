<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_search_card"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    android:scrollbarStyle="outsideOverlay"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/item_post_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_user_search_profile_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingLeft="5dp"
            android:src="@drawable/profile_placeholder"
            app:civ_border_color="#FF000000" />

        <TextView
            android:id="@+id/item_user_search_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_login_text_size"
            android:layout_toRightOf="@id/item_user_search_profile_picture"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/hint_username"/>
        <TextView
            android:id="@+id/item_user_search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_login_text_size"
            android:layout_toRightOf="@id/item_user_search_profile_picture"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/item_user_search_username"
            android:text="@string/hint_username"/>

        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/add"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>