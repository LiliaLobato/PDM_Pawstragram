<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:layout_margin="5dp"
    android:scrollbarStyle="outsideOverlay"
    card_view:cardCornerRadius="4dp">

<RelativeLayout
    android:id="@+id/item_post_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingLeft="5dp"
        android:src="@drawable/profile_placeholder"
        app:civ_border_color="#FF000000" />

    <TextView
        android:id="@+id/item_post_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_toRightOf="@+id/profile_picture"
        android:textSize="@dimen/activity_login_text_size"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        />
    
    <Button
        android:id="@+id/item_post_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/menu_icon" />

    <ImageView
        android:id="@+id/item_post_content"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@+id/profile_picture"
        android:layout_marginTop="10dp"
        android:src="@drawable/dummy_image"/>
    <Button
        android:id="@+id/item_post_like"
        android:layout_below="@+id/item_post_content"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/no_like" />
    <Button
        android:id="@+id/item_post_share"
        android:layout_below="@+id/item_post_content"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/share_ico"
        android:layout_alignParentRight="true"/>


</RelativeLayout>

</android.support.v7.widget.CardView>